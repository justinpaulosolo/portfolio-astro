---
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname === '/' ? 'home' : pathname.slice(1);
---
<nav>
  <div class="max-w-4xl mx-auto">
    <div class="flex justify-between">
      <div class="flex">
        <a href="/" class="uppercase font-base tracking-wide px-2 py-5">
          Justin<span class="font-bold text-gray-700">Solo</span>
        </a>
      </div>
      <div class="flex space-x-2 text-gray-600 items-center font-normal text-sm">
        <a href="/about" class={`px-2 py-5 ${currentPath === 'about' ? 'text-black' : 'font-base'}`}>
          About
        </a>
        <a href="/projects" class={`px-2 py-5 ${currentPath === 'projects' ? 'text-black' : 'font-base'}`}>
          Projects
        </a>
        <a href="/contact" class={`px-2 py-5 ${currentPath === 'contact' ? 'text-black' : 'font-base'}`}>
          Contact
        </a>
      </div>
    </div>
  </div>
</nav>
